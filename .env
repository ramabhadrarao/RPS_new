# Application
NODE_ENV=production
PORT=5000
APP_NAME=ATS Platform
APP_URL=https://ats.example.com

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ats_db?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Encryption
ENCRYPTION_KEY=64-character-hex-string-for-encryption

# Email
EMAIL_FROM=noreply@ats.example.com
SENDGRID_USERNAME=apikey
SENDGRID_PASSWORD=your-sendgrid-api-key

# Email (Development)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=mailtrap-username
EMAIL_PASSWORD=mailtrap-password

# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=ats-documents

# Redis
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX