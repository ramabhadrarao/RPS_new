# Application
NODE_ENV=development
PORT=5000
APP_NAME=ATS Platform
APP_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/ats_db

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Encryption
ENCRYPTION_KEY=64-character-hex-string-for-encryption-replace-this

# Email (Development - Mailhog)
EMAIL_FROM=noreply@ats.local
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USERNAME=
EMAIL_PASSWORD=

# File Storage (Local)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Redis
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_ORIGINS=http://localhost:3000

# Admin Email
ADMIN_EMAIL=admin@ats.local