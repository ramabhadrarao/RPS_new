// views/emails/layout.pug
doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title= subject
    style.
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .header {
        background-color: #2563eb;
        color: white;
        padding: 20px;
        text-align: center;
        border-radius: 8px 8px 0 0;
      }
      .content {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 0 0 8px 8px;
      }
      .button {
        display: inline-block;
        background-color: #2563eb;
        color: white;
        padding: 12px 24px;
        text-decoration: none;
        border-radius: 5px;
        margin: 20px 0;
      }
      .footer {
        text-align: center;
        margin-top: 30px;
        color: #6b7280;
        font-size: 14px;
      }
  body
    .header
      h1= appName
    .content
      block content
    .footer
      p &copy; #{year} #{appName}. All rights reserved.
      p This is an automated email, please do not reply.

// views/emails/welcome.pug
extends layout

block content
  h2 Welcome to #{appName}!
  p Hi #{firstName},
  p Thank you for registering with us. Your account has been created successfully.
  p To get started, please verify your email address by clicking the button below:
  a.button(href=verificationUrl) Verify Email
  p If the button doesn't work, copy and paste this link into your browser:
  p #{verificationUrl}
  p This link will expire in 24 hours.
  p Best regards,
  p The #{appName} Team

// views/emails/passwordReset.pug
extends layout

block content
  h2 Password Reset Request
  p Hi #{firstName},
  p We received a request to reset your password. Click the button below to create a new password:
  a.button(href=resetUrl) Reset Password
  p If the button doesn't work, copy and paste this link into your browser:
  p #{resetUrl}
  p This link will expire in #{validMinutes} minutes.
  p If you didn't request this password reset, please ignore this email.
  p Best regards,
  p The #{appName} Team

// views/emails/candidateStatusUpdate.pug
extends layout

block content
  h2 Application Status Update
  p Dear #{candidateName},
  p Your application status has been updated to: 
    strong #{status}
  if status === 'Interview'
    p Congratulations! You have been shortlisted for an interview.
  else if status === 'Selected'
    p Congratulations! You have been selected for the position.
  else if status === 'Offered'
    p We are pleased to extend an offer for the position.
  p You can track your application status anytime by visiting:
  a.button(href=trackingUrl) Track Application
  p Best regards,
  p The #{appName} Team

// views/emails/interviewInvitation.pug
extends layout

block content
  h2 Interview Invitation
  p Dear #{candidateName},
  p We are pleased to invite you for an interview for the position of 
    strong #{jobTitle}
    |  at 
    strong #{companyName}.
  .interview-details(style='background: white; padding: 20px; border-radius: 8px; margin: 20px 0;')
    p 
      strong Date: 
      | #{interviewDate}
    p 
      strong Time: 
      | #{interviewTime}
    p 
      strong Mode: 
      | #{interviewMode}
    if joinLink
      p 
        strong Join Link: 
        a(href=joinLink) #{joinLink}
  if instructions
    p 
      strong Instructions:
    p #{instructions}
  p Please confirm your availability by replying to this email.
  p Best regards,
  p The #{appName} Team

// views/emails/requirementAllocation.pug
extends layout

block content
  h2 New Requirement Assigned
  p Hi #{userName},
  p A new requirement has been assigned to you:
  .requirement-details(style='background: white; padding: 20px; border-radius: 8px; margin: 20px 0;')
    p 
      strong Job Title: 
      | #{jobTitle}
    p 
      strong Client: 
      | #{clientName}
    p 
      strong Urgency: 
      | #{urgency}
    p 
      strong Positions: 
      | #{positions}
  a.button(href=viewUrl) View Requirement
  p Please start sourcing candidates for this position.
  p Best regards,
  p The #{appName} Team